{% extends "layout.njk" %}


{% block content %}

    <div class="card">
        <section class="avatar" 
                 style="background: url({{ orcamento.avatar_url }}) no-repeat center center / cover">
                 
        </section>

        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{ orcamento.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ orcamento.age }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if orcamento.gender == "M" else "Feminino" }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in orcamento.services %}
                    <span>{{ service }}</span>
                    {%  endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ orcamento.created_at }}</div>
            </div>

            <a href="/orcamentos/{{ orcamento.id }}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock %}