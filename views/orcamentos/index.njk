{% extends "layout.njk" %}


{% block content %}

    <div class="card table-container">
    <a href="/orcamentos/create/">novo</a>
         <table>
            <thead> 
                <tr>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for orcamento in orcamentos %}
                <tr>
                    <td>
                        <span style="background-image: url({{ orcamento.avatar_url }})"></span>
                        {{orcamento.name}}
                    </td>
                    <td>{{orcamento.services}}</td>
                    <td> <a href="/orcamentos/{{ orcamento.id }}">ver</a> </td>
                </tr>
                {% endfor %}
            </tbody>
         </table>
    </div>

{% endblock %}