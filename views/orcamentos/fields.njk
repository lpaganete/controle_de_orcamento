<div class="item">
                <div>
                    <input 
                        type="url" 
                        name="avatar_url" 
                        placeholder="http://"
                        value="{{ orcamento.avatar_url }}" 
                    >  <!-- O  value permite trazer o valor do banco para o input-->
                </div>
            </div>

            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input 
                        type="text" 
                        name="name"
                        placeholder="Nome do instrutor"
                        value="{{ orcamento.name}}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <input 
                    type="date"  
                    name="birth"
                    value="{{ orcamento.birth}}"
                >
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span>
                        <input 
                            type="radio" 
                            name="gender" 
                            value="M" 
                            {% if  orcamento.gender == 'M'%} 
                                checked
                            {% endif %}> Masculino 
                    </span>
                     <span>
                        <input 
                            type="radio" 
                            name="gender" 
                            value="F" 
                            {% if  orcamento.gender == 'F'%}
                                checked
                            {% endif %}> Feminino 
                    </span> <!-- Este if é para retornar o valor que está salvo no banco e deixar como checked -->
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input 
                        type="text" 
                        name="services"
                        placeholder="Separe os serviços prestados por vírgula"
                        value="{{ orcamento.services }}" 
                    >
                </div>
            </div>

            <button type="submit">Salvar</button> 